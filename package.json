{
	"name": "swift-project-creation",
	"displayName": "Swift Package Creation",
	"description": "Allows to create an empty Swift package in VS Code.",
	"author": {
		"name": "Christian Gr√©visse",
		"email": "christian.grevisse@uni.lu"
	},
	"publisher": "cgrevisse",
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.createSwiftProject"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.createSwiftProject",
				"title": "Create a Swift Package"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
